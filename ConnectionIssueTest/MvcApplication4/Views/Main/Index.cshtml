@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>

    <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.6.2/jquery.min.js"></script>
    <script type="text/javascript" src="http://www.gscottolson.com/js/jquery/plugins/jquery.scrollTo-min.js"></script>
    <script type="text/javascript" src="http://www.gscottolson.com/js/jquery/jquery.easing.1.3.js"></script>
    <script type="text/javascript" src="/Scripts/blackbird.js"></script>
    <script src="/Scripts/jquery.signalR-0.5rc.min.js" type="text/javascript"></script>
    <script src="/signalr/hubs" type="text/javascript"></script>
    <link rel="Stylesheet" type="text/css" href="/Content/blackbird.css" />
</head>
<body>
    

    <h1>whatever</h1>

    <h3>Press F2 for blackbird console</h3>

    <button onclick="$.ajax({type: 'POST', url: '/Main/Notify'}); return false;">Trigger notification</button>

    <script type="text/javascript">
        $(function () {

            var test = $.connection.testHub;

            test.notify = function (message) {
                log.debug('SignalR message: ' + message);
            };

            // Start the connection
            $.connection.hub.start({ transport: 'auto' }, function () {
                test.join("whatever");
                log.debug("started connection");
            });
        });
    </script>

</body>
</html>


